pipeline {
  agent { label 'master' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Setting the variables values') {
      steps {
         sh 'chmod +x mvnw'
      }
    }
    stage('Scan') {
      steps {
        withSonarQubeEnv(installationName: 'SQ1') {
          sh './mvnw clean org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.0.2155:sonar'
        }
      }
    }
  }
}
